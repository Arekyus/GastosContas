@model IEnumerable<GastosContas.Models.Gasto>

@{
    ViewData["Title"] = "Cadastro";
}

<h1>Lista de gastos</h1>
    <p><a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square"> Criar novo gasto</i></a>
</p>
<table id="myTable"class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDoPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd-MM-yyyy}",item.DataDoPagamento))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn alert-primary mr-1"><i class="fas fa-pencil-alt"></i></a> | 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn alert-danger mr-1"><i class="fa fa-trash-alt fa lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.es.gov.br/scripts/jquery/jquery-globalize/1.0.0/cultures/globalize.culture.pt-BR.min.js"></script>
    <script src="https://igorescobar.github.io/jQuery-Mask-Plugin/js/jquery.mask.min.js"></script>
    <script>    
    $(document)
        .ready(function(){
        $('#Valor').mask('000.000.000.000.000,00', {reverse: true});
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

